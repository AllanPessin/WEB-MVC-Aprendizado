@{
    Layout = "_LayoutLogin";
}

<div class="container">
    <section>
        <div id="background" class="background">
            <img src="img/desenhos-animados-de-ensino-medio_18591-27351.jpg">
        </div>

        <div id="formulario" class="formulario">
            <form>
                <div class="form-group">
                    <label for="email" class="col-sm-4 control-label">Email:</label>
                    <div class="col-lg-12 input">
                        <input type="email" name="" id="email" class="form-control" value="" required="required" title="">
                    </div>
                    <label for="senha" class="col-sm-4 control-label">Senha:</label>
                    <div class="col-lg-12 input">
                        <input type="password" name="" id="senha" class="form-control" value="" required="required" title="">
                    </div>
                </div>

                <div class="row">
                    <div class="col-lg-12">
                        <button type="button" class="btn btn-block btn-success">Logar</button>
                    </div>
                </div>

                <div class="row m-5">
                    <div class="col-lg-12 text-center">
                        <span id="esqueceuSenha" class="text-center">Esqueceu sua senha?</span>
                        <button type="button" class="btn btn-block btn-danger">Recuperar Senha</button>
                    </div>

                </div>

            </form>

        </div>
    </section>
</div>
